<%= render 'main_header' %>
<div class="container mt-3">


<div class="row">
  <div class="col">
    <h1>All cocktails</h1>
  </div>
</div>

<div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-md-3 p-lg-5 p-3" data-aos="zoom-in-down">
      <div class="drink-card w-100">

        <div class="drink-card-img">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 500, width: 500, crop: :fill %>
          <% end %>

        </div>


        <div class="drink-card-title">
            <h2><%= cocktail.name.titleize %></h2>
        </div>
      <%= link_to "", cocktail_path(cocktail), class: "drink-card-link"  %>
      </div>
    </div>


  <% end %>
</div>

